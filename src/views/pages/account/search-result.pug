extends ../../layouts/default
include ../../helpers/mixins

block variables
  - const title = "Search"

block content
  .account.container
    - const iconNames = ['profile', 'search', 'calendar', 'settings', 'notice'];
    - const activeIndex = 1; 


      .account-navigation
        each iconName, index in iconNames
          +account-nav(iconName, index === activeIndex)
      .btn-group
        .btn.btn-hall-balance
          .title hall balance
          .value 32421.94
        .btn.btn-create-terminal
          svg.icon
            use(xlink:href="/img/sprites/sprite.svg#plus")
          span Create terminal
      .account-content
        include ../../../blocks/components/account/account-search/search-result/account-search_result
      include ../../../blocks/components/account/account-balance-info/account-balance-info

  block script
    script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")

    script.
      var swiper = new Swiper(".search-result-swiper", {
        slidesPerView: 1,
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
            renderBullet: function (index, className) {
              return '<span class="' + className + '">' + (index + 1) + "</span>";
            },
          },
        });